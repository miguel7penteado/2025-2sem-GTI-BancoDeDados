install.packages("revealjs")
install.packages("tidyverse")
install.packages("ggraph")
install.packages("igraph")
library(tidyverse)
library(ggraph)
library(igraph)
# Define os nós do conjunto A e B
times <- c("Santos", "Corinthians", "São Paulo", "Flamengo", "Vasco", "Grêmio", "Internacional", "Atlético Mineiro")
estados <- c("SP", "RJ", "RS")
# Define arestas (relacionamentos)
relacoes <- tibble::tibble(
from = c("Santos", "Corinthians", "São Paulo", "Flamengo", "Vasco", "Grêmio", "Internacional"),
to   = c("SP", "SP", "SP", "RJ", "RJ", "RS", "RS")
)
# Cria grafo
grafo <- graph_from_data_frame(d = relacoes, vertices = c(times, estados), directed = TRUE)
# Define tipo dos nós para colorir
V(grafo)$type <- ifelse(V(grafo)$name %in% estados, "Estado", "Time")
# Plot
ggraph(grafo, layout = "fr") +  # ou layout = "kk" ou "circle"
geom_edge_link(arrow = arrow(length = unit(4, 'mm')), end_cap = circle(3, 'mm'), color = "gray40") +
geom_node_point(aes(color = type), size = 6) +
geom_node_text(aes(label = name), repel = TRUE) +
scale_color_manual(values = c("Estado" = "tomato", "Time" = "steelblue")) +
theme_void() +
labs(title = "Diagrama de Relação entre Times e Estados")
